pipeline {
  agent {
    docker {
      image 'node:12.13.0-alpine'
      args '-p 3000:3000 --tmpfs /.npm'
    }
  }
  environment {
    CI = 'true'
  }
  stages {
    stage('Build') {
      steps {
        dir("src") {
          sh 'yarn install'
          sh 'yarn build'
        }
      }
    }
    stage('Test') {
      steps {
        dir("src") {
          sh 'yarn test'
        }
      }
    }
    stage('Publish') {
      steps {
        withNPM(npmrcConfig: 'build1-npmrc') {
          sh './bin/publish_snapshot.js ${BUILD_NUMBER}'
        }
      }
    }
  }
  post {
    failure {
      slackSend(
        color: "#FF9FA1",
        message: "Jenkins build failed: `${env.JOB_NAME}` #${env.BUILD_NUMBER}:\nChange: ${env.CHANGE_TITLE}:\n${env.RUN_DISPLAY_URL}\n${env.BUILD_URL}")
    }
    fixed {
      slackSend(
        message: "Jenkins build is back to normal: `${env.JOB_NAME}` #${env.BUILD_NUMBER}")
    }
  }
}
